0021: 0EFA8000;          % SLE r7, r5, r4            ; test SLE (mem[210]=10)
0022: 560F0001;          % BNEZ r7, #0x0001          ; 
0023: 0491000A;          % LDUI r1, #10              ; 
0024: A7310013;          % JAL r3, #0x0013           ; 
