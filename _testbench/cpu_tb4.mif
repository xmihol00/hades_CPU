001B: A731001C;          % JAL r3, #0x001C           ; 
001C: 04910009;          % LDUI r1, #9               ; test SGE (mem[209]=9)
001D: 0DF22000;          % SGE r7, r1, r1            ; 
001E: 560F0001;          % BNEZ r7, #0x0001          ; 
001F: 04910000;          % LDUI r1, #0               ; 
