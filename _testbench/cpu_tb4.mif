%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Test4 for the HaDes processor:
%   jumps and branches
%
% pre-condition:
%   Test1 (load/store) correct
%   Test2 (shift)      correct
%   Test3 (arithmetic) correct
%
% runtime @50MHz: 8100ns
%
% to observe:
%   mem[201-212]
%   reg1-reg7
% 
% post-condition:
%   mem[201] = 1
%   mem[202] = 2
%   mem[203] = 3
%   mem[204] = 3
%   mem[205] = 3
%   mem[206] = 6
%   mem[207] = 7
%   mem[208] = 8
%   mem[209] = 9
%   mem[210] = 10
%   mem[211] = 11
%   mem[212] = 12
%   reg5     = 0
%   reg6     = 1
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

DEPTH         = 4096;    % Memory depth (number of words)  %
WIDTH         = 32;      % Memory width (length of a word) %
ADDRESS_RADIX = HEX;
DATA_RADIX    = HEX;


CONTENT
